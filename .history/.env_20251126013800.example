# AI Orchestrator - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================
# API Keys (OPTIONAL - Cloud-first means these are fallback only)
# ============================================

# Anthropic Claude (optional - only if using API fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (optional - only if using API fallback)
OPENAI_API_KEY=your_openai_api_key_here

# GitHub (for Actions and API access)
GITHUB_TOKEN=your_github_token_here

# ============================================
# System Configuration
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================
# Resource Limits (Set by Setup Agent, can override)
# ============================================

# Maximum concurrent agents
MAX_CONCURRENT_AGENTS=10

# Maximum memory per agent (MB)
MAX_MEMORY_PER_AGENT_MB=200

# Maximum cache size (GB)
MAX_CACHE_SIZE_GB=5.0

# Maximum log size (GB)
MAX_LOG_SIZE_GB=1.0

# ============================================
# Usage Limits (Cost Control)
# ============================================

# Daily token limit
DAILY_TOKEN_LIMIT=1000000

# Daily API call limit
DAILY_API_CALL_LIMIT=1000

# Daily cost limit (USD)
DAILY_COST_LIMIT_USD=10.0

# Monthly cost limit (USD)
MONTHLY_COST_LIMIT_USD=50.0

# ============================================
# Cloud Configuration (PRIMARY)
# ============================================

# Blackbox AI Cloud endpoint
BLACKBOX_CLOUD_ENDPOINT=https://cloud.blackbox.ai/api/v1

# Enable cloud-first mode (should always be true)
CLOUD_FIRST_ENABLED=true

# Fallback to local if cloud unavailable
ALLOW_LOCAL_FALLBACK=true

# ============================================
# Database Configuration
# ============================================

# Database URL (for task persistence)
DATABASE_URL=sqlite:///./data/orchestrator.db

# Redis URL (for caching)
REDIS_URL=redis://localhost:6379/0

# ChromaDB path (for vector storage)
CHROMADB_PATH=./data/chromadb

# ============================================
# Monitoring Configuration
# ============================================

# Enable metrics collection
METRICS_ENABLED=true

# Metrics export interval (seconds)
METRICS_EXPORT_INTERVAL=60

# Prometheus port
PROMETHEUS_PORT=9090

# ============================================
# Web Interface Configuration
# ============================================

# Enable web interface
WEB_ENABLED=true

# Web interface host
WEB_HOST=0.0.0.0

# Web interface port
WEB_PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Security
# ============================================

# Secret key for sessions
SECRET_KEY=your_secret_key_here_change_in_production

# Enable authentication
AUTH_ENABLED=false

# ============================================
# Development Settings
# ============================================

# Enable debug mode
DEBUG=true

# Enable hot reload
HOT_RELOAD=true

# Enable profiling
PROFILING_ENABLED=false
